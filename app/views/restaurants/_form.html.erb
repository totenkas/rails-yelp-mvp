<%= simple_form_for(restaurant) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES %>
  </div>

  <div class="btn btn-primary">
    <%= f.button :submit, class: 'text-white' %>
  </div>
<% end %>
